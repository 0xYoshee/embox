# Common params

TARGET=monitor

SIGN_CHECKSUM=y
DISASSEMBLE=y

# Build targets (only one may be chosen)

SIMULATION_TRG=n
DEBUG_TRG=y
RELEASE_TRG=n
DOXYGEN_TRG=n

# Arch (only one may be chosen)

MONITOR_ARCH_SPARC=y
CC_PACKET=sparc-elf
CCFLAGS=-Werror -msoft-float -c -MD -mv8 -O0 -g -DLEON3 -D_TEST_SYSTEM_
LDFLAGS=-Wl -N -nostdlib -g

# Conio

MONITOR_CONIO=y

# Misc

MONITOR_MISC=y

# "File system" support

MONITOR_FS=y

# Network

MONITOR_NETWORK=y
MONITOR_NET_ARP=y
MONITOR_NET_BOOTP=y
MONITOR_NET_ETH=y
MONITOR_NET_ICMP=y
MONITOR_NET_IP_V4=y
MONITOR_NET_TFTP=y
MONITOR_NET_UDP=y

# Express tests

MONITOR_TESTS=y
MONITOR_TEST_CPU_CONTEXT=n
MONITOR_TEST_CHECKSUM=n
MONITOR_TEST_IRQ_AVAILABILITY=y
MONITOR_TEST_SOFT_TRAPS=n
MONITOR_TEST_MMU=n
MONITOR_TEST_RECURSION=n

# Drivers

MONITOR_DRIVERS=y
MONITOR_DRIVER_AMBA_PNP=y
MONITOR_DRIVER_GAISLER_IRQ_CTRL=y
MONITOR_DRIVER_GAISLER_UART=y
MONITOR_DRIVER_GAISLER_TIMER=y

# Shell commands

MONITOR_USERS=y
MONITOR_USER_ARP=y
MONITOR_USER_GOTO=y
MONITOR_USER_LDIMG=y
MONITOR_USER_PNPLS=y
MONITOR_USER_MEM=y
MONITOR_USER_HELP=y
MONITOR_USER_TESTMEM=y
MONITOR_USER_MMU_PROBE=y
MONITOR_USER_PING=y
MONITOR_USER_UDPD=y
MONITOR_USER_WMEM=y
MONITOR_USER_LS=y
